{
    "name": "path-lab-lite",
    "version": "0.1.0",
    "description": "Path-lab-lite is an electron app for all the pathology lab test needs.",
    "author": "Shubham Pathak",
    "private": true,
    "dependencies": {
        "ejs": "^3.1.6",
        "electron-is-dev": "^2.0.0",
        "electron-log": "^4.4.6",
        "electron-store": "^8.0.1",
        "electron-updater": "^4.6.5",
        "sequelize": "^6.14.1",
        "sqlite3": "^5.0.2"
    },
    "main": "electron.js",
    "scripts": {
        "start": "electron .",
        "postinstall": "electron-builder install-app-deps",
        "electron": "electron .",
        "dist": "electron-builder --linux",
        "pack": "electron-builder --linux --dir",
        "publish": "electron-builder --win -p always"
    },
    "devDependencies": {
        "concurrently": "^6.2.1",
        "electron": "^14.0.1",
        "electron-builder": "^22.11.7",
        "sequelize-cli": "^6.4.1",
        "wait-on": "^6.0.0"
    },
    "build": {
        "appId": "com.github.pathak107.pathlablite",
        "productName": "PathLabLite",
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "publish": [
            {
                "provider": "github",
                "owner": "pathak107",
                "repo": "PathLabElectron"
            }
        ],
        "extraFiles": [
            "labTest.db"
        ]
    }
}
