{
  "name": "path-lab-lite",
  "version": "0.1.0",
  "description": "Path-lab-lite is an electron app for all the pathology lab test needs.",
  "author": "Shubham Pathak",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^1.1.1",
    "@chakra-ui/react": "^1.8.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "ejs": "^3.1.6",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.5",
    "framer-motion": "^4.1.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-quill": "^2.0.0-beta.4",
    "react-router-dom": "^6.2.1",
    "react-scripts": "4.0.3",
    "sequelize": "^6.14.1",
    "sqlite3": "^5.0.2",
    "web-vitals": "^1.1.2"
  },
  "homepage": "./",
  "main": "./build/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "electron": "electron .",
    "electron-package": "electron-builder --win",
    "publish": "electron-builder --win -p always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "sequelize-cli": "^6.4.1",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.github.pathak107.pathlablite",
    "productName": "PathLabLite",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "directories": {
      "output": "electronBuild"
    },
    "extraResources": [
      "labTest.db"
    ]
  }
}
